<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:controller="jgnash.uifx.dialog.options.OptionDialogController" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" styleClass="dialog">
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER" styleClass="floating, dialog">
            <Tab text="%Tab.StartupShutdown" >
                <fx:include source="StartupShutdownTab.fxml"/>
            </Tab>
            <Tab text="Untitled Tab 2"/>
        </TabPane>
    </center>

    <bottom>
        <ButtonBar BorderPane.alignment="CENTER">
            <buttons>
                <Button mnemonicParsing="false" onAction="#handleCloseAction" text="%Button.Close"
                        ButtonBar.buttonData="CANCEL_CLOSE"/>
            </buttons>
        </ButtonBar>
    </bottom>
</BorderPane>
