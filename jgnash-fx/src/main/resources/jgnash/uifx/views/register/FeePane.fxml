<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import jgnash.uifx.control.DecimalTextField?>
<?import org.controlsfx.glyphfont.Glyph?>
<fx:root type="javafx.scene.layout.BorderPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <center>
    <DecimalTextField fx:id="feesField"/>
  </center>
  <right>
    <Button fx:id="detailsButton" mnemonicParsing="false" styleClass="icon-button">
      <graphic>
        <Glyph fontFamily="FontAwesome" icon="PENCIL_SQUARE" />
      </graphic>
      <tooltip>
        <Tooltip text="%ToolTip.ShowDetails"/>
      </tooltip>
    </Button>
  </right>
</fx:root>
