<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import jgnash.resource.font.FontAwesomeLabel?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ToggleButton?>
<?import org.controlsfx.control.SegmentedButton?>

<?import javafx.scene.layout.StackPane?>
<BorderPane fx:controller="jgnash.uifx.report.jasper.JasperViewerDialogController"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <fx:define>
        <DropShadow fx:id="dropShadow" color="grey" offsetX="2" offsetY="2"/>
    </fx:define>
    <top>
        <BorderPane>
            <top>
                <ToolBar >
                    <Button fx:id="printButton" onAction="#handlePrintAction" text="%Button.Print"
                            disable="true">
                        <graphic>
                            <FontAwesomeLabel glyphName="PRINT"/>
                        </graphic>
                    </Button>

                    <Button fx:id="saveButton" onAction="#handleSaveAction" text="Save"
                            disable="true">
                        <graphic>
                            <FontAwesomeLabel glyphName="FLOPPY_ALT"/>
                        </graphic>
                    </Button>

                    <Separator/>
                    <Button fx:id="reportFormatButton" onAction="#handleFormatAction" text="Options"
                            disable="true">
                        <graphic>
                            <FontAwesomeLabel glyphName="PRINT"/>
                        </graphic>
                    </Button>
                    <Spinner fx:id="fontSizeSpinner" prefWidth="80"/>
                    <Separator/>
                    <Button fx:id="firstButton" onAction="#handleFirstAction"
                            disable="true">
                        <graphic>
                            <FontAwesomeLabel glyphName="FAST_BACKWARD"/>
                        </graphic>
                    </Button>
                    <Button fx:id="previousButton" onAction="#handlePreviousAction"
                            disable="true">
                        <graphic>
                            <FontAwesomeLabel glyphName="STEP_BACKWARD"/>
                        </graphic>
                    </Button>
                    <Button fx:id="nextButton" onAction="#handleNextAction"
                            disable="true">
                        <graphic>
                            <FontAwesomeLabel glyphName="STEP_FORWARD"/>
                        </graphic>
                    </Button>
                    <Button fx:id="lastButton" onAction="#handleLastAction"
                            disable="true">
                        <graphic>
                            <FontAwesomeLabel glyphName="FAST_FORWARD"/>
                        </graphic>
                    </Button>
                    <Separator/>
                    <Button fx:id="zoomOutButton" onAction="#handleZoomOutAction"
                            disable="true">
                        <graphic>
                            <FontAwesomeLabel glyphName="SEARCH_MINUS"/>
                        </graphic>
                    </Button>
                    <ComboBox fx:id="zoomComboBox" editable="true" focusTraversable="false" onAction="#handleZoomChangedAction"
                              prefWidth="80"/>
                    <Button fx:id="zoomInButton" onAction="#handleZoomInAction"
                            disable="true">
                        <graphic>
                            <FontAwesomeLabel glyphName="SEARCH_PLUS"/>
                        </graphic>
                    </Button>
                    <Separator/>
                    <SegmentedButton>
                        <buttons>
                            <ToggleButton fx:id="fitPageButton" onAction="#handleActualSizeAction">
                                <graphic>
                                    <FontAwesomeLabel glyphName="ARROWS"/>
                                </graphic>
                            </ToggleButton>
                            <ToggleButton fx:id="fitHeightButton" onAction="#handleFitHeightAction">
                                <graphic>
                                    <FontAwesomeLabel glyphName="ARROWS_V"/>
                                </graphic>
                            </ToggleButton>
                            <ToggleButton fx:id="fitWidthButton" onAction="#handleFitPageWidthAction">
                                <graphic>
                                    <FontAwesomeLabel glyphName="ARROWS_H"/>
                                </graphic>
                            </ToggleButton>
                        </buttons>
                    </SegmentedButton>
                </ToolBar>
            </top>
            <center>
                <StackPane fx:id="reportControllerPane"/>
            </center>
        </BorderPane>
    </top>

    <center>
        <ScrollPane fx:id="scrollPane" prefHeight="500.0" prefWidth="480.0" BorderPane.alignment="CENTER"
                    hbarPolicy="AS_NEEDED" vbarPolicy="ALWAYS" styleClass="dialog">
            <VBox fx:id="pagePane"/>
        </ScrollPane>
    </center>
    <bottom>
        <Label fx:id="statusLabel"/>
    </bottom>
</BorderPane>


